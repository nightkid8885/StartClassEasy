<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30px"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1"
                android:id="@+id/aff_firstPartQuestion"
                android:background="@drawable/layout_bg"
                android:layout_marginBottom="10dp">


                <TextView
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Please rate your level of learning this week"
                    android:id="@+id/aff_p1_lbl2"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="0- None of the topics, 1- Less than half of the topics, 2- Half of the topics, 3- More than half of the topics, 4- All of the topics"
                    android:id="@+id/aff_p1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="italic"
                    android:paddingTop="10dp"
                    android:textAlignment="center" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:layout_weight="7.44"
                    android:id="@+id/aff_p1_Q1">

                    <TextView
                        android:layout_width="313dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="I am able to remember key points of the topics taught"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/aff_p1_Q1_lbl"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/aff_p1_Q1_Rb"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:layout_weight="7.44"
                    android:id="@+id/aff_p1_Q2">

                    <TextView
                        android:layout_width="313dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="I am able to understand and re-explain key topics learned "
                        android:id="@+id/aff_p1_Q2_lbl"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/aff_p1_Q2_Rb"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_weight="7.44"
                    android:id="@+id/aff_p1_Q3" >

                    <TextView
                        android:layout_width="313dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="I am confident I can translate the knowledge learnt to useful practical skills"
                        android:id="@+id/aff_p1_Q3_lbl"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/aff_p1_Q3_Rb"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1"
                android:id="@+id/aff_secondPartQuestion"
                android:paddingTop="10dp"
                android:background="@drawable/layout_bg"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Please rate your Instructor this week "
                    android:id="@+id/aff_p2_lbl1"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="0- Unsatisfactory, 1- Needs improvement, 2- Satisfactory, 3- Good, 4- Excellent"
                    android:id="@+id/aff_p2_lbl2"
                    android:textStyle="italic"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:layout_weight="7.44"
                    android:id="@+id/aff_p2_Q1" >

                    <TextView
                        android:layout_width="313dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Prepared with course material and knowledgable"
                        android:id="@+id/aff_p2_Q1_lbl"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/aff_p2_Q1_Rb"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:layout_weight="7.44"
                    android:id="@+id/aff_p2_Q2" >

                    <TextView
                        android:layout_width="313dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Delivered and taught course material well"
                        android:id="@+id/aff_p2_Q2_lbl"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/aff_p2_Q2_Rb"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:layout_weight="7.44"
                    android:id="@+id/aff_p2_Q3" >

                    <TextView
                        android:layout_width="313dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Engages with class and provides guidance"
                        android:id="@+id/aff_p2_Q3_lbl"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/aff_p2_Q3_ratingBar"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/aff_thirdPartQuestion"
                android:background="@drawable/layout_bg"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="3 things that worked well in the course"
                    android:id="@+id/aff_workedWellLbl1"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="(eg room logistics, instructor conduct, relevant topics)"
                    android:id="@+id/aff_workedWellLbl2"
                    android:textStyle="italic"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/aff_workedWellEt"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/aff_fourthPartQuestion"
                android:background="@drawable/layout_bg"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="3 things that could be improved in the course *"
                    android:id="@+id/aff_improveLbl1"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="(eg room logistics, instructor conduct, relevant topics)"
                    android:id="@+id/aff_improveLbl2"
                    android:textStyle="italic"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/aff_improvementEt"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/aff_fifthPartQuestion"
                android:background="@drawable/layout_bg"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Any further comments or feedback?"
                    android:id="@+id/aff_commentLbl"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/aff_feedbackEt"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:id="@+id/aff_submitBtn"
                android:text="SUBMIT"
                android:layout_marginBottom="10dp" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>